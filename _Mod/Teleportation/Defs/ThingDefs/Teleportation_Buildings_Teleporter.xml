	<ThingDef ParentName="BuildingBase">
		<defName>TeleportationStation</defName>
		<eType>BuildingComplex</eType>
		<label>Teleporter</label>
		<thingClass>Teleportation.Building_Teleporter</thingClass>
		<graphicPath>Things/Building/Teleportation/Teleporter</graphicPath>
		<graphicClass>Graphic_Single</graphicClass>
		<ShaderType>Transparent</ShaderType>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<pathCost>50</pathCost>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0.3</staticSunShadowHeight>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHealth>100</MaxHealth>
			<Flammability>1.0</Flammability>
		</statBases>
		<description>This building transports matter to it's counterpart.\nNote: It transports non-living matter only.</description>
		<size>(2,2)</size>
		<costList>
			<Steel>50</Steel>
			<Gold>10</Gold>
			<Plasteel>40</Plasteel>
		</costList>
		<tickerType>Normal</tickerType>
		<rotatable>false</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<selectable>true</selectable>
		<designationCategory>Misc</designationCategory>
		<itemSurface>true</itemSurface>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
			</li>
		</comps>
		<building>
			<fixedStorageSettings>
				<priority>Normal</priority>
				<allowances>
					<categories>
						<li>FoodRaw</li>
						<li>FoodMeals</li>
						<li>ResourcesRaw</li>
						<li>Items</li>
						<li>BodyParts</li>
						<li>Weapons</li>
					</categories>
				</allowances>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Normal</priority>
				<allowances>
					<categories>
						<li>FoodRaw</li>
						<li>FoodMeals</li>
						<li>ResourcesRaw</li>
						<li>Items</li>
						<li>BodyParts</li>
						<li>Weapons</li>
					</categories>
				</allowances>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<!--<researchPrerequisite>ResearchNanoStorage</researchPrerequisite>-->
		<placeWorkers>
			<li>Teleportation.PlaceWorker_Teleporter</li>
		</placeWorkers>
		<constructEffect>ConstructMetal</constructEffect>
	</ThingDef>

